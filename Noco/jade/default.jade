		script(src="js/libs/megapix-image.js")
		link(rel="stylesheet",href="css/index.css")
	body.page
		div.warrper
			div.note-pc
			div.logo
			div.page-loading.ready
				div.content
					div#topheight.topheight
					div.icon-co.tran
					div.loadimg
					h4 一氧化碳已经是当今突出的安全隐患，
					h3 消灭CO，从我做起！
					p.load 
						span Loading..
						em#loadnum 0%
			div.page.page-init
				.swipeBox
					.ProD
					.icon-co
					.note-warring
					.note-success
				span.note
					i
					i.op
				p 向上滑动气泡, <br />CO充分燃烧,转化为CO2!

			div.page.page-process
				div.star
					div.code(data-img="code")
					div#mySlider
						div
							a(href="#pro-1")
								img(lazyload="img/pro-1.png")
						div
							a(href="#pro-2")
								img(lazyload="img/pro-2.png")
						div
							a(href="#pro-3")
								img(lazyload="img/pro-3.png")
					div#mySlider-name.pro-name
						div.bg(data-img="text-bg")
						p.black 卡萨帝传奇系列燃气热水器
						div.name-list
							span.gold(data-img="name-1")
							span.silver(data-img="name-2")
							span.white(data-img="name-3")
					div.text-note
						p 卡萨帝NOCO燃气热水器携手豆瓣
						p 开启代号NOCO的安全隐患大搜捕！
						//- p 枕边的手机，游荡的黑车，感情的骗子…
						//- p 正义如你，像卡萨帝传奇热水器
						p 对CO说NO一样，
						p 搜捕出安全隐患对他们说
							em#icon-no.no(data-img="no")
						span.note
							i
							i.op
			div.page.page-step.on
				div.step-bar
					span.item.i1.on 1
					em.point
						i
						i
						i
						i
					span.item.i2 2
					em.point
						i
						i
						i
						i
					span.item.i3 3
					em.point
						i
						i
						i
						i
					span.item.i4 4
				div.step-1
					h2.title【选择模板进行创作】
					div#selecttemp.slider-normal
						div.slide-normal-group
							div.slide-normal.on(data-img="temp-1")
							- for (var i = 2;i<7;i++)
								div.slide-normal(data-img="temp-#{i}")
					div.btn-list
						div.btn.select-temp(data-bg="btn-bg",rel="0") 选择模板
						//- div.btn.select-temp(data-bg="btn-bg") 选择模板
				div.step-2.none
					h2.title 【写下安全宣言，晒出安全隐患】
					div.text-input(data-bg="input-bg")
						div.input-group
							label#text1
							input(type="text",name="first",value="CO")
						div.input-group
							label#text2
							input(type="text",name="second",value="NOCO")
					div.upload(data-img="upload-bg")
						form(name="uploadimgform")
							input#uploadimg(type="file",name="uploadimg")
					//- p 请注意,部分机型无法使用上传图片功能,请使用浏览器打开继续操作.
					div.btn-list
						div.btn.select-img(data-bg="btn-bg") 下一步
				div.step-3.none
					h2.title 【发布作品，完成任务】
					canvas(id="ps",width="360",height="450")
					div.btn-list
						div.btn.reset(data-bg="btn-bg") 重新制作
						div.btn.uploadbtn(data-bg="btn-bg") 下一步
				div.step-4.none
					div.uploading(data-img="goodjob")
					div.form-reg
						div(data-img="reg-info")
						form(name="reg")
							div.input-group
								label 姓名
								input(type="text",name="username",maxlength="10")
							div.input-group
								label 手机
								input(type="number",name="mobile",maxlength="11")
							p 【您的个人信息仅用于此活动抽奖】
					div.btn-list
						div.btn.submit(data-bg="btn-bg") 提交信息
			div.page.page-share
				div.zw
				div.code(data-img="code")
				h2 您的信息提交成功!
				p 活动结束后一个月内将会有专人联系获奖用户兑奖事宜。您也可以前往豆瓣卡萨帝小站关注获奖情况！
				div#mySlider2
					div
						a(href="#pro-1")
							img(lazyload="img/pro-1.png")
					div
						a(href="#pro-2")
							img(lazyload="img/pro-2.png")
					div
						a(href="#pro-3")
							img(lazyload="img/pro-3.png")
				div#mySlider2-name.pro-name
					div.bg(data-img="text-bg")
					p.black 卡萨帝传奇系列燃气热水器
					div.name-list
						span.gold(data-img="name-1")
						span.silver(data-img="name-2")
						span.white(data-img="name-3")
				div.share-btn
					p 把作品分享给朋友：
					div.share-list
						a.wechat-share(href="#",data-img="icon-wechat")
						-rows = ["weibo","qweibo","douban","qzone"]
						each item in rows
							a(href="#",data-img="icon-#{item}",data-share="#{item}",class="#{item}")
		
